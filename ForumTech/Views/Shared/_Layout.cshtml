@using ForumTech.Repositorio
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Daguis Sailor Pub</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Daguis Sailor Pub", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Cadstre-se", "Index", "Usuarios")</li>
                    <li>@Html.ActionLink("Tópicos", "Index", "Topico")</li>
                    <li>@Html.ActionLink("Usuários", "Index", "Usuarios")</li>
                </ul>
                <form method="POST" action="/Login/FinalizarSessao" id="frmSessao" class="navbar-right">
                    @{
                        var msgVisitante = "Olá visitante";
                        var usuarioLogado = AutenticarUsuario.retornarUsuarioDaSessao();
                        
                        if (usuarioLogado == null)
                        {
                            <label style="color: white">@msgVisitante</label>
                        }
                        else
                        {
                            <label style="color:white">@usuarioLogado.nome</label>
                        }
                    }
                    <input type="submit" value="Entrar/Sair" class="btn btn-default"/>
                </form>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Daguis Sailor Pub</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
